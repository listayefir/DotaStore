@model DotaStore.UI.Models.CartIndexViewModel
@{
    ViewBag.Title = "Your cart";
}

<h2>Index</h2>
<table class="table">
    <thead>
    <tr>
        <th>Quantity</th>
        <th>Item</th>
        <th class="text-right">Price</th>
        <th class="text-right">Subtotal</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var line in Model.Cart.GetOrder())
    {
        <tr>
            <td class="text-center">@line.Quantity</td>
            <td class="text-left">@line.Item.Name</td>
            <td class="text-right">@line.Item.Price.ToString("c")</td>
            <td class="text-right">
                @((line.Quantity * line.Item.Price).ToString("c"))
            </td>
        </tr>
    }
    </tbody>
    <tfoot>
    <tr>
        <td colspan="3" class="text-right">Total:</td>
        <td class="text-right">
            @Model.Cart.TotalPrice().ToString("c")
        </td>
    </tr>
    </tfoot>
</table>

<div class="text-center">
    <a class="btn btn-primary" href="@Model.ReturnUrl">Continue shopping</a>
</div>

